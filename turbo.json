{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env"],
  "tasks": {
    "build": { "dependsOn": ["^build"], "outputs": ["dist/**"] },
    "dev": { "cache": false, "persistent": true },
    "lint": { "outputs": [] },
    "lint-staged": { "outputs": [] },
    "install": { "cache": false },
    "check-types": { "outputs": [], "dependsOn": ["^check-types"] },
    "format": { "outputs": [], "dependsOn": ["^format"] }
  }
} 