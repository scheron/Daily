{
  "name": "daily",
  "version": "0.10.0",
  "productName": "Daily",
  "description": "Daily - A minimal daily tasks management app",
  "type": "module",
  "main": "out/main/main.js",
  "license": "MIT",
  "keywords": [
    "daily",
    "daily-app",
    "daily-tasks",
    "tasks-management",
    "todos",
    "productivity"
  ],
  "engines": {
    "node": ">=22.5.0",
    "npm": ">=10.9.2",
    "pnpm": ">=10.12.1"
  },
  "repository": "https://github.com/scheron/release-electron",
  "author": {
    "name": "Infected by JS",
    "url": "https://github.com/scheron"
  },
  "scripts": {
    "release": "node scripts/release.js",
    "dev": "electron-vite dev",
    "build": "electron-vite build && electron-builder --mac",
    "build:compress": "electron-vite build",
    "preview": "electron-vite preview",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint . --ext .vue,.js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write src/",
    "typecheck:main": "tsc --noEmit --project src/main/tsconfig.json",
    "typecheck:render": "vue-tsc --noEmit --project src/renderer/tsconfig.json",
    "typecheck:shared": "tsc --noEmit --project src/shared/tsconfig.json",
    "prepare": "husky",
    "db:inspect": "node scripts/db/inspect-db.js --output output.txt",
    "db:clear": "node scripts/db/clear-db.js",
    "db:seed": "node scripts/db/seed.js",
    "lint-staged": "lint-staged",
    "circular": "madge --circular src/",
    "bundle:size": "node scripts/bundle-size.js",
    "check:all": "pnpm lint && pnpm typecheck && pnpm circular"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --parser=typescript --write"
    ],
    "*.{js,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.{css}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@electron/notarize": "^2.5.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.2",
    "@types/codemirror": "^5.60.17",
    "@types/luxon": "^3.6.2",
    "@types/node": "^22.15.17",
    "@types/pouchdb": "^6.4.2",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vue/tsconfig": "^0.7.0",
    "electron": "^36.3.2",
    "electron-builder": "^26.0.12",
    "electron-vite": "^4.0.1",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "eslint-plugin-vue": "^10.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "madge": "^8.0.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.12",
    "terser": "^5.40.0",
    "type-fest": "^5.2.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-tsconfig-paths": "^5.1.4",
    "vue-eslint-parser": "^10.1.3",
    "vue-tsc": "^2.2.8"
  },
  "dependencies": {
    "@codemirror/autocomplete": "^6.20.0",
    "@codemirror/commands": "^6.10.0",
    "@codemirror/lang-markdown": "^6.5.0",
    "@codemirror/language": "^6.11.3",
    "@codemirror/language-data": "^6.5.2",
    "@codemirror/state": "^6.5.2",
    "@codemirror/view": "^6.38.8",
    "@floating-ui/vue": "^1.1.6",
    "@lezer/highlight": "^1.2.3",
    "@lezer/markdown": "^1.6.0",
    "@tailwindcss/vite": "^4.1.8",
    "@vueuse/core": "^13.1.0",
    "clsx": "^2.1.1",
    "electron-store": "^10.0.1",
    "electron-updater": "^6.6.2",
    "floating-vue": "^5.2.2",
    "fs-extra": "^11.3.0",
    "fuse.js": "^7.1.0",
    "gray-matter": "^4.0.3",
    "luxon": "^3.6.1",
    "nanoid": "^5.1.5",
    "pinia": "^3.0.2",
    "pouchdb": "^9.0.0",
    "pouchdb-find": "^9.0.0",
    "tailwind-merge": "^3.2.0",
    "tailwindcss": "^4.1.8",
    "vue": "^3.5.16",
    "vue-router": "^4.5.1",
    "vue-sonner": "^2.0.0",
    "vue-toasts-lite": "^0.1.4"
  }
}
