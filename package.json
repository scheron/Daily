{
  "name": "daily",
  "version": "0.1.0",
  "productName": "Daily",
  "description": "Daily - A minimal daily tasks management app",
  "type": "module",
  "main": "main/main.js",
  "author": "infected by js",
  "license": "MIT",
  "engines": {
    "node": ">=22.5.0"
  },
  "scripts": {
    "dev": "node scripts/dev-server.js",
    "build": "NODE_ENV=production node scripts/build.js && electron-builder",
    "build:win": "NODE_ENV=production node scripts/build.js && electron-builder --win",
    "build:mac": "NODE_ENV=production node scripts/build.js && electron-builder --mac",
    "build:linux": "NODE_ENV=production node scripts/build.js && electron-builder --linux",
    "build:compress": "NODE_ENV=production node scripts/build.js",
    "preview": "vite preview",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint . --ext .vue,.js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write src/",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@electron/notarize": "^2.5.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.2",
    "@rollup/plugin-strip": "^3.0.4",
    "@types/luxon": "^3.6.2",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^22.15.17",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vue/tsconfig": "^0.7.0",
    "chalk": "^4.1.2",
    "chokidar": "^4.0.3",
    "electron": "^36.3.2",
    "electron-builder": "^26.0.12",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "eslint-plugin-vue": "^10.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.12",
    "rollup-plugin-visualizer": "^6.0.1",
    "terser": "^5.40.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-compression": "^0.5.1",
    "vue-eslint-parser": "^10.1.3",
    "vue-tsc": "^2.2.8"
  },
  "dependencies": {
    "@mdit/plugin-img-size": "^0.18.1",
    "@tailwindcss/vite": "^4.1.8",
    "@vueuse/core": "^13.1.0",
    "clsx": "^2.1.1",
    "electron-store": "^10.0.1",
    "fs-extra": "^11.3.0",
    "highlight.js": "^11.11.1",
    "luxon": "^3.6.1",
    "markdown-it": "^14.1.0",
    "markdown-it-task-lists": "^2.1.1",
    "nanoid": "^5.1.5",
    "pinia": "^3.0.2",
    "tailwind-merge": "^3.2.0",
    "tailwindcss": "^4.1.8",
    "vue": "^3.5.16",
    "vue-sonner": "^2.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
