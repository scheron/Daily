{
  "name": "daily",
  "version": "0.1.0",
  "private": true,
  "productName": "Daily",
  "description": "Elevate your productivity with Daily",
  "type": "module",
  "author": "infected by js",
  "license": "MIT",
  "engines": {
    "node": ">=22.5.0",
    "yarn": "1.22.22"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky",
    "clean": "rm -rf node_modules && rm -rf apps/*/node_modules && rm -rf packages/*/node_modules",
    "build": "yarn turbo run build",
    "dev:web": "yarn turbo run dev --filter=web",
    "dev:landing": "yarn turbo run dev:landing --filter=@daily/landing",
    "lint": "yarn turbo run lint",
    "format": "yarn turbo run format",
    "lint-staged": "yarn turbo run lint-staged",
    "check-types": "yarn turbo run check-types",
    "convert-to-webp": "node scripts/convert-to-webp.js"
  },
  "devDependencies": {
    "husky": "^9.1.6",
    "sharp": "^0.34.2",
    "turbo": "^2.4.4"
  },
  "packageManager": "yarn@1.22.22"
}
